unit uFrameProgressBar;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.StdCtrls;

type
  TframePB = class(TFrame)
    pb1: TProgressBar;
    lblProgressBar: TLabel;
  private

    { Private declarations }
  public
    { Public declarations }
    procedure progressBar(posicao, tamMax, pLeft, pTop: Integer);

  end;

implementation

{$R *.dfm}


 procedure TframePB.progressBar(posicao, tamMax, pLeft, pTop: Integer);
begin
   pb1.MAX := tamMax; pb1.Min :=1;
  Self.Left := pLeft;
  Self.Top := pTop;

  if (posicao = 0) then
  begin
      pb1.Position := posicao;
  end;

  pb1.Position := pb1.Position + Trunc((posicao));
  lblProgressBar.Caption := 'Progresso da  Exportação ' +  IntToStr(pb1.Position) + ' %';
end;



end.
